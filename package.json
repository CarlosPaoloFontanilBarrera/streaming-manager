{
  "name": "jireh-streaming-manager",
  "version": "2.0.0",
  "description": "Sistema profesional de gesti√≥n multi-plataforma de streaming con vouchers",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'Build completed'",
    "test": "jest --verbose --forceExit --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --forceExit --detectOpenHandles",
    "test:auth": "jest --testPathPattern=auth --verbose",
    "test:api": "jest --testPathPattern=api --verbose",
    "test:alarms": "jest --testPathPattern=alarms --verbose"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.6.7",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nyc": "^15.1.0",
    "@types/jest": "^29.5.8"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": ["<rootDir>/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "server.js",
      "!tests/**",
      "!node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": ["text", "lcov", "html"]
  },
  "nyc": {
    "reporter": ["text", "html"],
    "exclude": ["tests/**", "coverage/**", "node_modules/**"]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "streaming",
    "manager",
    "postgresql",
    "nodejs",
    "express",
    "railway",
    "vouchers",
    "fechas-automaticas",
    "bcrypt",
    "rate-limiting",
    "validation",
    "testing",
    "jest",
    "supertest"
  ],
  "author": "Paolo F",
  "license": "MIT"
}
